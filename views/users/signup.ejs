<% layout("./layouts/boilerplate.ejs") %>

<div class="row ">
  <h2 class="col-6 offset-3 mb-3">SignUp on Wanderlust</h2>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <!-- Usernaem -->
        <label for="userame" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="user"
          placeholder="Username"
          class="form-control"
          required
        />
        <div>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="invalid-feedback">Please provide a Username</div>
      </div>

      <!-- Email id -->
      <div class="mb-3">
        <label for="userame" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="abcde@gmail.com"
          class="form-control"
          required
        />
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="userame" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          kd
          placeholder="Password"
          class="form-control"
          required
        />
      </div>

      <!-- Sumbited form -->
      <button class="btn btn-success">SignUp</button>

    </form>
  </div>
</div>
